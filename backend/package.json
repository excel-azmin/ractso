    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.2",
    "socket.io": "^4.8.1",
    "ssl-commerz-node": "^1.0.4",
    "sslcommerz-lts": "^1.2.0",
    "zod": "^3.25.49"
