  "scripts": {
    "build": "nest build  -b swc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start -b swc",
    "dev": "nest start --debug -b swc -w",
    "start:debug": "nest start --debug -b swc -w",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "prebuild": "prisma generate",
    "predev": "prisma generate && nest build -b swc",
    "prisma:reset": "rm -rf ./node_modules/.prisma && prisma generate"
  },
  "dependencies": {
    "@clerk/backend": "^2.5.2",
    "@clerk/express": "^1.7.10",
